<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Masukkan Nama"/>

    <EditText
        android:id="@+id/edtNim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Masukkan Nim"/>

    <EditText
        android:id="@+id/edtIpk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Masukkan IPK"/>

    <Button
        android:id="@+id/btnSimpan"
        android:backgroundTint="#42C2FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"/>

    <Button
        android:id="@+id/btnHapus"
        android:backgroundTint="#42C2FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus"/>

    <TextView
        android:id="@+id/tvFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Filter: " />

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioAsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ascending" />

        <RadioButton
            android:id="@+id/radioDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descending" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM" />

        <RadioButton
            android:id="@+id/radioNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama" />

        <RadioButton
            android:id="@+id/radioIpk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IPK" />
    </RadioGroup>

    <Button
        android:id="@+id/btnCari"
        android:backgroundTint="#42C2FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari"/>

    <Button
        android:id="@+id/btnFilter"
        android:backgroundTint="#42C2FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari Filter"/>

    <TextView
        android:id="@+id/txvData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Tersimpan :"/>


    <TextView
        android:id="@+id/txvHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txvHslCari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Pencarian :"/>


    <TextView
        android:id="@+id/txvHslCari2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>