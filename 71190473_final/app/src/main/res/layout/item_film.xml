<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#FDF6F0"
        app:cardCornerRadius="20dp">


        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="JUDUL MOVIE" />

        <TextView
            android:id="@+id/tvGenre"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            tools:text="Genre"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvProduser"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="16dp"
            tools:text="Nama Produser"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvPemeran"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:text="Nama Pemeran Utama"/>

        <TextView
            android:id="@+id/tvTahun"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="117dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:text="Tahun Rilis"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_duration"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="38dp"
                android:backgroundTint="@color/btn"
                android:outlineSpotShadowColor="@color/white"
                android:text="Edit"

                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnHapus"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/red"



                android:outlineSpotShadowColor="@color/white"
                android:text="Delete" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>






</layout>

